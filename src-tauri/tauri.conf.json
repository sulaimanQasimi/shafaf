{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "شفاف",
  "version": "6.3.2",
  "identifier": "com.sulaiman.shafaf",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "شفاف",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "additionalBrowserArgs": "--disable-popup-blocking --disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "app", "dmg", "appimage"],
    "resources": [
      "../ai.html"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "android": {
      "minSdkVersion": 24,
      "versionCode": 4
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://github.com/sulaimanQasimi/shafaf/releases/latest/download/latest.json"
    ],
    "dialog": true,
    "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmltdW0gc2lnbmF0dXJlIGxlbmd0aApleGFtcGxlLnB1YmtleQ=="
  }
}
